<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="colorControlNormal">@color/hint_text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <!-- Customize your theme here. -->

    <style name="editTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:gravity">left|center_vertical</item>

    </style>

    <style name="DialogThme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="UnLockDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/gray_55</item>

    </style>

    <style name="ColorPrimaryToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/gray_55</item>
        <item name="android:textColorPrimary">@color/heading_text_color</item>

    </style>


    <style name="BoldTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Raleway-Bold.ttf</item>
    </style>

    <style name="LightTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Raleway-Light.ttf</item>
    </style>

    <style name="MediumTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Raleway-Medium.ttf</item>
    </style>

    <style name="ThinTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">RobotoSlab-Thin.ttf</item>
    </style>

    <style name="RobotoTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Roboto-Regular.ttf</item>
    </style>

    <style name="RobotoBoldTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Roboto-Regular.ttf</item>
    </style>

    <style name="RobotoMediumTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Roboto-Medium.ttf</item>
    </style>

    <style name="RobotoLightTextAppearance" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Roboto-Light.ttf</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/RobotoLightTextAppearance</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/RobotoLightTextAppearance</item>
    </style>

    <style name="DarkHintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/view_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/RobotoLightTextAppearance</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="colorControlNormal">@color/hint_text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="DarkTextInputLayoutAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- reference our hint & error styles -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorHint">@color/view_color</item>
        <item name="colorControlNormal">@color/view_color</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="hintTextAppearance">@style/DarkHintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="DropDownAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="colorControlNormal">@color/hint_text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>


    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppLibAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="toolbarStyle">@style/LibAppTheme.Dark</item>
        <item name="tabStyle">@style/PickerTabLayout</item>
    </style>
    <style name="LibAppTheme.Dark" parent="Widget.MaterialComponents.Toolbar.Primary">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="toolbarStyle">@style/ToolbarTheme.Dark</item>
        <item name="tabStyle">@style/PickerTabLayout.Dark</item>
    </style>
    <style name="PickerTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!--        tab background-->
        <item name="tabBackground">@color/colorPrimary</item>
        <!--        tab text color selector : set selector accordingly to dark or light theme-->
        <item name="tabTextColor">@color/white</item>
        <!--        tab indicator color: set indicator color accordingly-->
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
    </style>


</resources>
