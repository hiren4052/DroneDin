<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5dp"
    app:cardElevation="@dimen/_5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.grewon.dronedin.helper.AspectImageView
            android:id="@+id/package_image"
            android:layout_width="@dimen/_100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_diamond"
            app:aspectRatio="1.2"
            app:aspectRatioEnabled="true" />

        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/_5dp"
            android:text="@string/select_a_package"
            android:textAppearance="@style/BoldTextAppearance"
            android:textColor="@color/gray_71"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/package_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/_2dp"
            android:text="@string/select_a_package"
            android:textAppearance="@style/MediumTextAppearance"
            android:textColor="@color/gray_71"
            android:textSize="@dimen/_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_marginBottom="@dimen/_15dp"
            android:background="@color/gray_e9" />

        <TextView
            android:id="@+id/package_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/select_a_package"
            android:maxLines="3"
            android:minEms="3"
            android:textAppearance="@style/LightTextAppearance"
            android:textColor="@color/gray_71"
            android:textSize="@dimen/_14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>