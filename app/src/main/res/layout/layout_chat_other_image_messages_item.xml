<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5dp"
    android:layout_marginBottom="@dimen/_5dp"
    android:orientation="vertical">

    <com.grewon.dronedin.helper.AspectImageView
        android:id="@+id/image_other_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_55dp"
        android:background="@drawable/ic_other_message_background"
        android:paddingStart="@dimen/_25dp"
        android:paddingTop="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        android:scaleType="centerCrop"
        app:aspectRatio="0.75"
        app:aspectRatioEnabled="true"
        app:srcCompat="@drawable/ic_rectangle_spann_color" />

    <TextView
        android:id="@+id/txt_image_other_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_40dp"
        android:padding="@dimen/_5dp"
        android:text="2:00 PM"
        android:textColor="@color/gray_71"
        android:textSize="@dimen/_12sp" />
</LinearLayout>